.theme-bg {
  position: fixed;
  top: 0rpx;
  height: 480rpx;
  background: #ffd200;
  width: 100%;
}

scroll-view {
  background: #fff;
}

.scroll-header {
  height: 536rpx;
  background: #f2f2f2;
  position: relative;
}

.barcode-container {
  height: 300rpx;
  background: #ffd200;
}

.barcode-view {
  height: 272rpx;
  background: #fff;
  margin: 0 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.barcode-title {
  font-size: 22rpx;
  height: 32rpx;
  margin: 26rpx auto 20rpx;
  color: #4a4a4a;
  font-weight: bold;
  letter-spacing: 5rpx;
}

.barcode-image {
  background: blue;
  width: 100%;
  height: 120rpx;
}

.barcode-number {
  font-size: 26rpx;
  margin-top: 21rpx;
  color: #9b9b9b;
  font-weight: bold;
}

.action-container {
  position: absolute;
  height: 210rpx;
  left: 0rpx;
  bottom: 28rpx;
  right: 0rpx;
   overflow: hidden; 
}

.bg-circle {
  position: absolute;
  bottom: 160rpx;
  left: 0%;
  border-radius: 100%;
  background: #ffd200;
  height: 110rpx;
  width: 100%;  
}

.action-viewholder {
  margin: 0 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}

.action-view {
    width: 210rpx;
  height: 210rpx;
  z-index: 9999;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
}

.action-image {
  width: 90rpx;
  height: 90rpx;
}

.action-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  height: 34rpx;
  color: #141e28;
}

.scroll-content {
  background: #f2f2f2;
}

.scroll-item {
  border-radius: 16rpx;
  margin: 0 32rpx;
  width: 686rpx;
}
